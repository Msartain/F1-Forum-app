<%- include('../partials/header') %>

<form action="/home/<%=user._id %>" method="POST">
    <div class="form-group container mt-4">
        <label for="exampleFormControlInput1">Title:</label>
        <input type="text" name="title" class="form-control" id="exampleFormControlInput1" required="true">
    </div>
    <div class="form-group container">
        <label for="exampleFormControlTextarea1">Post:</label>
        <textarea class="form-control" name="body" id="exampleFormControlTextarea1" rows="3" required="true"></textarea>
        <button type="submit" class="btn btn-primary float-right my-3">Submit Post</button>
    </div>
</form>

